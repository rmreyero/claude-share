{
  "name": "@claude-share/web",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "src/server/index.ts",
  "scripts": {
    "build": "bun run build:server && bun run build:client",
    "build:server": "bun build ./src/server/index.ts --outdir ./dist/server --target bun",
    "build:client": "bun build ./src/client/index.tsx --outdir ./dist/public --minify",
    "dev": "bun run --watch src/server/index.ts",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@claude-share/shared": "workspace:*",
    "hono": "^4.7.0",
    "nanoid": "^5.1.0",
    "zod": "^3.24.0"
  },
  "devDependencies": {
    "@types/bun": "^1.2.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-markdown": "^9.0.0",
    "remark-gfm": "^4.0.0",
    "shiki": "^1.29.0",
    "tailwindcss": "^4.0.0"
  }
}
