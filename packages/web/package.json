{
  "name": "@claude-share/web",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "src/server/index.ts",
  "scripts": {
    "build": "bun run build:server && bun run build:client && bun run build:css",
    "build:server": "bun build ./src/server/index.ts --outdir ./dist/server --target bun",
    "build:client": "bun build ./src/client/index.tsx --outdir ./dist/client --minify",
    "build:css": "bunx @tailwindcss/cli -i ./src/client/style.css -o ./dist/client/style.css --minify",
    "dev": "bun run dev:server & bun run dev:client & bun run dev:css & wait",
    "dev:server": "bun run --watch src/server/index.ts",
    "dev:client": "bun build ./src/client/index.tsx --outdir ./dist/client --watch",
    "dev:css": "bunx @tailwindcss/cli -i ./src/client/style.css -o ./dist/client/style.css --watch",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@claude-share/shared": "workspace:*",
    "@libsql/client": "^0.17.0",
    "hono": "^4.11.9",
    "nanoid": "^5.1.0",
    "zod": "^3.24.0"
  },
  "devDependencies": {
    "@types/bun": "^1.2.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-markdown": "^9.0.0",
    "remark-gfm": "^4.0.0",
    "shiki": "^1.29.0",
    "@tailwindcss/cli": "^4.0.0",
    "tailwindcss": "^4.0.0"
  }
}
